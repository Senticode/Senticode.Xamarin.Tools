<?xml version="1.0" encoding="utf-8"?>

<MasterDetailPage xmlns="http://xamarin.com/schemas/2014/forms"
                  xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                  xmlns:viewModels1="clr-namespace:_template.MasterDetail.ViewModels;assembly=_template.MasterDetail"
                  xmlns:views1="clr-namespace:_template.MasterDetail.Views;assembly=_template.MasterDetail"
                  xmlns:pages1="clr-namespace:_template.MasterDetail.Views.Pages;assembly=_template.MasterDetail"
                  Title="Sample"
                  FlowDirection="MatchParent"
                  x:Class="_template.MasterDetail.Views.MainPage"
                  x:DataType="{x:Type viewModels1:MainViewModel}"
                  IsGestureEnabled="{x:OnPlatform iOS=False, Android=True}"
                  MasterBehavior="Popover">
    <MasterDetailPage.Master>
        <views1:MainMasterPage />
    </MasterDetailPage.Master>

    <MasterDetailPage.Detail>
        <NavigationPage>
            <x:Arguments>
                <pages1:HomePage />
            </x:Arguments>
        </NavigationPage>
    </MasterDetailPage.Detail>
</MasterDetailPage>