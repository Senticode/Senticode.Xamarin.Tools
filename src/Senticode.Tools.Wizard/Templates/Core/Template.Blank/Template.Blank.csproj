    <RootNamespace>_template.Blank</RootNamespace>
    <AssemblyName>_template.Blank</AssemblyName>
  </PropertyGroup>
  
  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
